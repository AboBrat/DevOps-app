pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checking out code from a Git repository
                checkout([$class: 'GitSCM', 
                          branches: [[name: 'main']], 
                          userRemoteConfigs: [[url: 'https://github.com/AboBrat/DevOps-app.git']]])
            }
        }
        
        // Add more stages here for your build and deployment steps
    }
}
